<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - TaskManager</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <!-- 🧭 Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container">
            <a class="navbar-brand" href="/">TaskManager</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/Tasks">Tasks</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Tasks/Create">Create Task</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- 🌟 Main Content -->
    <div class="container">
        @RenderBody()
    </div>

    <!-- ✨ Motivational Quote -->
    <div class="text-center mt-5 mb-3">
        <blockquote class="blockquote">
            <p class="mb-0">"The secret of getting ahead is getting started." – Mark Twain</p>
        </blockquote>
    </div>

    <!-- 🔚 Footer -->
    <footer class="text-center text-muted mt-4 mb-4">
        <small>&copy; 2025 TaskManager · Stay organized. Stay productive.</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
